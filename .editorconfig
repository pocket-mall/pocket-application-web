# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true
max_line_length = 140
quote_type = single

[*.ts]
quote_type = single

# HTML global rules
[*.html]
quote_type = double

# YAML/YML global rules
[*.{yaml,yml}]
indent_style = space

# Markdown (.md) global rules
[*.md]
trim_trailing_whitespace = false
max_line_length = off
